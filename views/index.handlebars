<div class="container">
    <div class="row">
        <div class ="col-sm-12">
            <h1 id="logo">Eat-da-Burgers !</h1>
            <img src="/assets/img/burger_img.jpg" alt="animated-burger image" class="rounded" >
        </div>
    </div>
    <div class="row">
        <div class ="col-sm-6  burger-name">

            <ul id="waitingList"class="p-3">
             {{#each burgers}}
               {{#unless devoured}}
                  {{> burgers/burger-block devoured=true}}
               {{/unless}}
             {{/each}}

            </ul>
        
        </div>
         <div class ="col-sm-6 devour-burger">
              <ul id ="devouredList"class="p-3">
             {{#each burgers}}
           	 {{#if devoured}} <li>
                    {{id}} {{burger_name}}
                <button class ="eatAgainBurger rounded" data-id="{{id}}"> EAT AGAIN!</button>
                </li>
             {{/if}}
             {{/each}}
            </ul>
            
        </div>
    </div>

    <div class="row">
        <div class = "col-sm-12">
           <form>
            <textarea name="burger"></textarea>

            <button type="submit" class="btn btn-primary mt-3" id="btn-submit">Submit</button>
           </form> 
        <div>

    </div>





</div> 